@model ASP.NET_Web_App_Core__MVC_.Models.Agent

@{
    ViewData["Title"] = "Agent Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Agent Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Agent ID:</dt>
                        <dd class="col-sm-9">@Model.AgentID</dd>

                        <dt class="col-sm-3">Agent Name:</dt>
                        <dd class="col-sm-9"><strong>@Model.AgentName</strong></dd>

                        <dt class="col-sm-3">Address:</dt>
                        <dd class="col-sm-9">@Model.Address</dd>

                        <dt class="col-sm-3">Phone Number:</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.AgentID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Order Statistics</h5>
                </div>
                <div class="card-body">
                    @if (Model.Orders != null && Model.Orders.Any())
                    {
                        <p class="text-muted">Total Orders: <strong>@Model.Orders.Count</strong></p>
                        <p class="text-muted">Total Revenue: <strong>@Model.Orders.Sum(o => o.TotalAmount).ToString("C")</strong></p>
                        <p class="text-muted">Completed Orders: <strong>@Model.Orders.Count(o => o.OrderStatus == "Completed")</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">No orders yet for this agent.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

