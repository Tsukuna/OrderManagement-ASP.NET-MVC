@model ASP.NET_Web_App_Core__MVC_.Models.Order

@{
    ViewData["Title"] = "Print Order";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order #@Model.OrderID</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        @@media print {
            .no-print { display: none; }
            body { margin: 0; padding: 20px; }
        }
        .invoice-header { border-bottom: 3px solid #007bff; padding-bottom: 20px; margin-bottom: 20px; }
        .invoice-box { border: 1px solid #ddd; padding: 15px; margin-bottom: 20px; }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="no-print mb-3">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="bi bi-printer"></i> Print
            </button>
            <button onclick="window.close()" class="btn btn-secondary">Close</button>
        </div>

        <div class="invoice-header">
            <div class="row">
                <div class="col-md-6">
                    <h1>Order Invoice</h1>
                    <p class="mb-0"><strong>Order ID:</strong> #@Model.OrderID</p>
                    <p class="mb-0"><strong>Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                </div>
                <div class="col-md-6 text-end">
                    <h2>Order Management System</h2>
                    <p class="mb-0">123 Business Street</p>
                    <p class="mb-0">City, State 12345</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="invoice-box">
                    <h5>Agent Information</h5>
                    <p class="mb-1"><strong>@Model.Agent?.AgentName</strong></p>
                    <p class="mb-1">@Model.Agent?.Address</p>
                    <p class="mb-1">Phone: @Model.Agent?.PhoneNumber</p>
                    <p class="mb-0">Email: @Model.Agent?.Email</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="invoice-box">
                    <h5>Order Information</h5>
                    <p class="mb-1"><strong>Status:</strong> @Model.OrderStatus</p>
                    <p class="mb-1"><strong>Customer:</strong> @Model.User?.UserName</p>
                    <p class="mb-0"><strong>Customer Email:</strong> @Model.User?.Email</p>
                </div>
            </div>
        </div>

        <h4>Order Items</h4>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>#</th>
                    <th>Item Name</th>
                    <th>Description</th>
                    <th>Unit Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.OrderDetails != null)
                {
                    int counter = 1;
                    foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@counter</td>
                            <td><strong>@detail.Item?.ItemName</strong></td>
                            <td>@detail.Item?.Description</td>
                            <td>@detail.UnitAmount.ToString("C")</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.TotalAmount.ToString("C")</td>
                        </tr>
                        counter++;
                    }
                }
            </tbody>
            <tfoot>
                <tr class="table-info">
                    <td colspan="5" class="text-end"><strong>Grand Total:</strong></td>
                    <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="mt-4">
                <h5>Notes:</h5>
                <p>@Model.Notes</p>
            </div>
        }

        <div class="text-center mt-5 pt-5" style="border-top: 1px solid #ddd;">
            <p class="text-muted">Thank you for your business!</p>
            <p class="text-muted small">This is a computer-generated invoice. No signature required.</p>
        </div>
    </div>
</body>
</html>

