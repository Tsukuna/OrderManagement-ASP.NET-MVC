@model ASP.NET_Web_App_Core__MVC_.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash"></i> Delete Order</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this order? This action will also delete all order details.
                    </div>

                    <h5 class="mb-3">Order Details</h5>
                    <dl class="row">
                        <dt class="col-sm-3">Order ID:</dt>
                        <dd class="col-sm-9">#@Model.OrderID</dd>

                        <dt class="col-sm-3">Order Date:</dt>
                        <dd class="col-sm-9">@Model.OrderDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3">Agent:</dt>
                        <dd class="col-sm-9">@Model.Agent?.AgentName</dd>

                        <dt class="col-sm-3">Customer:</dt>
                        <dd class="col-sm-9">@Model.User?.UserName</dd>

                        <dt class="col-sm-3">Status:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-secondary">@Model.OrderStatus</span>
                        </dd>

                        <dt class="col-sm-3">Total Amount:</dt>
                        <dd class="col-sm-9"><strong class="text-success">@Model.TotalAmount.ToString("C")</strong></dd>

                        <dt class="col-sm-3">Items Count:</dt>
                        <dd class="col-sm-9">@(Model.OrderDetails?.Count ?? 0) items</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="OrderID" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Order
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

