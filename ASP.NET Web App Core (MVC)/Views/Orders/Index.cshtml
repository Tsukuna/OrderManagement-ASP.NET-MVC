@model IEnumerable<ASP.NET_Web_App_Core__MVC_.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-cart"></i> Orders</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Index" method="get" class="mb-4">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Status Filter</label>
                        <select name="status" class="form-select">
                            <option value="">All Statuses</option>
                            <option value="Pending" selected="@(ViewData["CurrentStatus"]?.ToString() == "Pending")">Pending</option>
                            <option value="Processing" selected="@(ViewData["CurrentStatus"]?.ToString() == "Processing")">Processing</option>
                            <option value="Shipped" selected="@(ViewData["CurrentStatus"]?.ToString() == "Shipped")">Shipped</option>
                            <option value="Completed" selected="@(ViewData["CurrentStatus"]?.ToString() == "Completed")">Completed</option>
                            <option value="Cancelled" selected="@(ViewData["CurrentStatus"]?.ToString() == "Cancelled")">Cancelled</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Agent Filter</label>
                        <select name="agentId" class="form-select" asp-items="ViewBag.Agents">
                            <option value="">All Agents</option>
                        </select>
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <button type="submit" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-funnel"></i> Filter
                        </button>
                    </div>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Agent</th>
                            <th>Customer</th>
                            <th>Status</th>
                            <th>Items</th>
                            <th>Total Amount</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.OrderID</strong></td>
                                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                <td>@order.Agent?.AgentName</td>
                                <td>@order.User?.UserName</td>
                                <td>
                                    @if (order.OrderStatus == "Completed")
                                    {
                                        <span class="badge bg-success">@order.OrderStatus</span>
                                    }
                                    else if (order.OrderStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                                    }
                                    else if (order.OrderStatus == "Processing" || order.OrderStatus == "Shipped")
                                    {
                                        <span class="badge bg-info">@order.OrderStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@order.OrderStatus</span>
                                    }
                                </td>
                                <td>@(order.OrderDetails?.Count ?? 0) items</td>
                                <td class="text-success fw-bold">@order.TotalAmount.ToString("C")</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Print" asp-route-id="@order.OrderID" class="btn btn-secondary" title="Print" target="_blank">
                                            <i class="bi bi-printer"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@order.OrderID" class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@order.OrderID" class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No orders found.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

