@model ASP.NET_Web_App_Core__MVC_.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-file-text"></i> Order #@Model.OrderID</h2>
        <div>
            <a asp-action="Print" asp-route-id="@Model.OrderID" class="btn btn-secondary" target="_blank">
                <i class="bi bi-printer"></i> Print
            </a>
            <a asp-action="Edit" asp-route-id="@Model.OrderID" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Order ID:</dt>
                                <dd class="col-sm-7"><strong>#@Model.OrderID</strong></dd>

                                <dt class="col-sm-5">Order Date:</dt>
                                <dd class="col-sm-7">@Model.OrderDate.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-5">Status:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.OrderStatus == "Completed")
                                    {
                                        <span class="badge bg-success">@Model.OrderStatus</span>
                                    }
                                    else if (Model.OrderStatus == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">@Model.OrderStatus</span>
                                    }
                                    else if (Model.OrderStatus == "Processing" || Model.OrderStatus == "Shipped")
                                    {
                                        <span class="badge bg-info">@Model.OrderStatus</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@Model.OrderStatus</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Agent:</dt>
                                <dd class="col-sm-7">@Model.Agent?.AgentName</dd>

                                <dt class="col-sm-5">Customer:</dt>
                                <dd class="col-sm-7">@Model.User?.UserName</dd>

                                <dt class="col-sm-5">Total Amount:</dt>
                                <dd class="col-sm-7"><strong class="text-success fs-5">@Model.TotalAmount.ToString("C")</strong></dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr />
                        <dl class="row mb-0">
                            <dt class="col-sm-2">Notes:</dt>
                            <dd class="col-sm-10">@Model.Notes</dd>
                        </dl>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Order Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Item</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OrderDetails != null)
                                {
                                    foreach (var detail in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@detail.Item?.ItemName</strong>
                                                <br /><small class="text-muted">@detail.Item?.Description</small>
                                            </td>
                                            <td>@detail.UnitAmount.ToString("C")</td>
                                            <td>@detail.Quantity</td>
                                            <td class="text-success fw-bold">@detail.TotalAmount.ToString("C")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                            <tfoot class="table-info">
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                                    <td><strong class="text-success fs-5">@Model.TotalAmount.ToString("C")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Agent Information</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>@Model.Agent?.AgentName</strong></p>
                    <p class="mb-1 text-muted small">@Model.Agent?.Address</p>
                    <p class="mb-1 text-muted small">@Model.Agent?.PhoneNumber</p>
                    <p class="mb-0 text-muted small">@Model.Agent?.Email</p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Order Summary</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">Total Items: <strong>@(Model.OrderDetails?.Count ?? 0)</strong></p>
                    <p class="mb-1">Total Quantity: <strong>@(Model.OrderDetails?.Sum(od => od.Quantity) ?? 0)</strong></p>
                    <hr />
                    <p class="mb-0 fs-5">Total: <strong class="text-success">@Model.TotalAmount.ToString("C")</strong></p>
                </div>
            </div>

            <div class="d-grid gap-2 mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Orders
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

