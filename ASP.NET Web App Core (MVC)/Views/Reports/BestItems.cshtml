@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Best Selling Items";
}

<div class="container-fluid mt-4">
    <h2><i class="bi bi-trophy"></i> Best Selling Items</h2>
    <p class="text-muted">Top 10 best-selling products by quantity</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Rank</th>
                            <th>Item Name</th>
                            <th>Price</th>
                            <th>Total Quantity Sold</th>
                            <th>Total Revenue</th>
                            <th>Order Count</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int rank = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (rank == 1)
                                    {
                                        <span class="badge bg-warning text-dark">ðŸ¥‡ @rank</span>
                                    }
                                    else if (rank == 2)
                                    {
                                        <span class="badge bg-secondary">ðŸ¥ˆ @rank</span>
                                    }
                                    else if (rank == 3)
                                    {
                                        <span class="badge bg-info">ðŸ¥‰ @rank</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">@rank</span>
                                    }
                                </td>
                                <td><strong>@item.ItemName</strong></td>
                                <td>@item.Price.ToString("C")</td>
                                <td><span class="badge bg-primary">@item.TotalQuantity units</span></td>
                                <td class="text-success fw-bold">@item.TotalRevenue.ToString("C")</td>
                                <td>@item.OrderCount orders</td>
                            </tr>
                            rank++;
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                    <p class="text-muted mt-3">No data available.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

