@model dynamic

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid mt-4">
    <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
    <p class="text-muted">Overview of system statistics and metrics</p>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center border-primary">
                <div class="card-body">
                    <i class="bi bi-cart" style="font-size: 3rem; color: #0d6efd;"></i>
                    <h3 class="mt-3">@Model.TotalOrders</h3>
                    <p class="text-muted">Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center border-success">
                <div class="card-body">
                    <i class="bi bi-currency-dollar" style="font-size: 3rem; color: #198754;"></i>
                    <h3 class="mt-3">@Model.TotalRevenue.ToString("C")</h3>
                    <p class="text-muted">Total Revenue</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center border-info">
                <div class="card-body">
                    <i class="bi bi-box" style="font-size: 3rem; color: #0dcaf0;"></i>
                    <h3 class="mt-3">@Model.TotalItems</h3>
                    <p class="text-muted">Total Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center border-warning">
                <div class="card-body">
                    <i class="bi bi-people" style="font-size: 3rem; color: #ffc107;"></i>
                    <h3 class="mt-3">@Model.TotalAgents</h3>
                    <p class="text-muted">Total Agents</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h5 class="mb-0"><i class="bi bi-clock"></i> Pending Orders: @Model.PendingOrders</h5>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check-circle"></i> Completed Orders: @Model.CompletedOrders</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Date</th>
                                    <th>Agent</th>
                                    <th>Status</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td><strong>#@order.OrderID</strong></td>
                                        <td>@order.OrderDate.ToString("MM/dd")</td>
                                        <td>@order.Agent?.AgentName</td>
                                        <td>
                                            @if (order.OrderStatus == "Completed")
                                            {
                                                <span class="badge bg-success">@order.OrderStatus</span>
                                            }
                                            else if (order.OrderStatus == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">@order.OrderStatus</span>
                                            }
                                        </td>
                                        <td>@order.TotalAmount.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Top 5 Items</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var item in Model.TopItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.ItemName
                                <span class="badge bg-primary rounded-pill">@item.TotalQuantity</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

