@model ASP.NET_Web_App_Core__MVC_.Models.Item

@{
    ViewData["Title"] = "Item Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Item Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">Item ID:</dt>
                        <dd class="col-sm-9">@Model.ItemID</dd>

                        <dt class="col-sm-3">Item Name:</dt>
                        <dd class="col-sm-9"><strong>@Model.ItemName</strong></dd>

                        <dt class="col-sm-3">Size:</dt>
                        <dd class="col-sm-9"><span class="badge bg-info">@Model.Size</span></dd>

                        <dt class="col-sm-3">Price:</dt>
                        <dd class="col-sm-9 text-success fw-bold fs-5">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-3">Stock Quantity:</dt>
                        <dd class="col-sm-9">
                            @if (Model.StockQuantity > 50)
                            {
                                <span class="badge bg-success">@Model.StockQuantity units</span>
                            }
                            else if (Model.StockQuantity > 20)
                            {
                                <span class="badge bg-warning">@Model.StockQuantity units</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">@Model.StockQuantity units (Low Stock!)</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Description:</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Created Date:</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ItemID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">Order History</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                    {
                        <p class="text-muted">Total Orders: <strong>@Model.OrderDetails.Count</strong></p>
                        <p class="text-muted">Total Quantity Sold: <strong>@Model.OrderDetails.Sum(od => od.Quantity)</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">No orders yet for this item.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}

